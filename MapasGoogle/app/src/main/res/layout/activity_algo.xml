<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".algo"
        android:gravity="center">
    <TableLayout android:layout_width="300dp" android:layout_height="300dp">
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginBottom="50dp">
            <EditText android:layout_width="match_parent" android:layout_height="50dp"
                      android:layout_weight="1" android:id="@+id/te1"
                      android:inputType="textPersonName" android:hint="Longitud1"></EditText>
            <EditText android:layout_width="match_parent" android:layout_height="50dp"
                      android:layout_weight="1" android:id="@+id/te2"
                      android:inputType="textPersonName" android:hint="Latitud1"></EditText>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginBottom="50dp">
            <EditText android:layout_width="match_parent" android:layout_height="50dp"
                      android:layout_weight="1" android:id="@+id/te3"
                      android:inputType="textPersonName" android:hint="Longitud2"></EditText>
            <EditText android:layout_width="match_parent" android:layout_height="50dp"
                      android:layout_weight="1" android:id="@+id/te4"
                      android:inputType="textPersonName" android:hint="Latitud2"></EditText>
        </TableRow>
        <TableRow>
            <Button android:layout_width="match_parent" android:layout_height="50dp"
                    android:layout_weight="1" android:id="@+id/bo1" android:text="Circulo"/>
            <Button android:layout_width="match_parent" android:layout_height="50dp"
                    android:layout_weight="1" android:id="@+id/bo2" android:text="Linea"/>
        </TableRow>

    </TableLayout>

</LinearLayout>