<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".datos">
    <TableLayout android:layout_width="329dp" android:layout_height="668dp"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="25dp">

        <TableRow  android:layout_marginLeft="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="50dp">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="INGRESE SUS DATOS" android:gravity="center" />
        </TableRow>
        <RelativeLayout android:layout_marginBottom="50dp">

            <ImageView android:src="@drawable/identity" android:layout_height="80dp"
                       android:layout_width="157dp" android:layout_weight="1" android:layout_marginRight="@android:dimen/thumbnail_height"/>
            <TableLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginLeft="90dp" >
                <TableRow android:layout_marginLeft="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <EditText android:layout_height="40dp" android:width="225dp" android:gravity="center"
                              android:hint="Ingrese su nombre" android:id="@+id/edit1"/>
                </TableRow>
                <TableRow android:layout_marginLeft="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <EditText android:layout_height="40dp" android:width="225dp" android:gravity="center"
                              android:hint="Ingrese su apellido" android:id="@+id/edit2"/>
                </TableRow>
            </TableLayout>
        </RelativeLayout>

        <RelativeLayout android:layout_height="wrap_content" android:layout_width="wrap_content"
                        android:layout_marginBottom="50dp">

            <ImageView android:src="@drawable/id" android:layout_height="80dp"
                       android:layout_width="157dp" android:layout_weight="1" android:layout_marginRight="@android:dimen/thumbnail_height"/>

                <TableRow android:layout_marginLeft="20dp" android:layout_width="match_parent" android:layout_height="80dp"
                >
                    <EditText android:layout_height="40dp" android:width="225dp" android:gravity="center"
                              android:hint="Ingrese su identificacion" android:layout_marginLeft="90dp"
                              android:layout_gravity="center_vertical" android:id="@+id/edit3"/>
                </TableRow>

        </RelativeLayout>
        <RelativeLayout android:layout_height="wrap_content" android:layout_width="wrap_content"
                        android:layout_marginBottom="50dp">

            <ImageView android:src="@drawable/loca" android:layout_height="80dp"
                       android:layout_width="157dp" android:layout_weight="1" android:layout_marginRight="@android:dimen/thumbnail_height"/>

            <TableRow android:layout_marginLeft="20dp" android:layout_width="match_parent" android:layout_height="80dp"
            >
                <EditText android:layout_height="40dp" android:width="225dp" android:gravity="center"
                          android:hint="Ingrese su direcion" android:layout_marginLeft="90dp"
                          android:inputType="textMultiLine"
                          android:layout_gravity="center_vertical" android:id="@+id/edit5"/>
            </TableRow>

        </RelativeLayout>
        <RelativeLayout android:layout_height="wrap_content" android:layout_width="wrap_content"
                        android:layout_marginBottom="20dp">

            <ImageView android:src="@drawable/tel" android:layout_height="80dp"
                       android:layout_width="157dp" android:layout_weight="1" android:layout_marginRight="@android:dimen/thumbnail_height"/>

            <TableRow android:layout_marginLeft="20dp" android:layout_width="match_parent" android:layout_height="80dp"
            >
                <EditText android:layout_height="40dp" android:width="225dp" android:gravity="center"
                          android:hint="Numero telefonico" android:layout_marginLeft="90dp"
                          android:layout_gravity="center_vertical" android:id="@+id/edit4"/>
            </TableRow>

        </RelativeLayout>
        <TableRow android:layout_width="match_parent" android:layout_height="71dp">
            <Button android:layout_width="215dp" android:layout_height="44dp"
                    android:text="Registrar informacion" android:layout_marginLeft="50dp" android:id="@+id/el1"
            />
        </TableRow>




    </TableLayout>







</android.support.constraint.ConstraintLayout>